{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "lib": ["dom"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {}
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/__tests__/*"
    ]
}
